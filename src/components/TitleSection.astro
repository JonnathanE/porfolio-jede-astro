---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
}
const { title, subtitle, description } = Astro.props;
---

{subtitle && <h4 class="text-center mb-2 text-lg">{subtitle}</h4>}
<h2 class="text-center text-5xl">{title}</h2>
{
  description && (
    <p class="text-center max-w-2xl mx-auto mt-5 mb-12">{description}</p>
  )
}
