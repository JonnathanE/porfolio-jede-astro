---
interface Props {
  href: string;
  //   icon: string;
  //   title: string;
}

const { href } = Astro.props as Props;
---

<a
  href={href}
  class="rounded-full border border-gray-500 flex justify-center items-center gap-x-2 py-2 px-4 hover:scale-110 transition dark:border-white/50"
  target="_blank"
  rel="noopener noreferrer"
  download
>
  <slot />
</a>
