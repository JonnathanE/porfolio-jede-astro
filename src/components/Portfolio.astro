---
import { Image } from "astro:assets";

import SectionContainer from "@/components/SectionContainer.astro";
import TitleSection from "@/components/TitleSection.astro";

import SendIconImg from "@assets/images/send-icon.png";
import RightArrowBoldImg from "@assets/images/right-arrow-bold.png";
import ProjectCard from "./ProjectCard.astro";
---

<SectionContainer id="my-work">
  <TitleSection title="Proyectos" />
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 my-10">
    <ProjectCard
      image="images/work-1.png"
      title="App de Finanzas"
      description="Aplicación web para gestionar ingresos y egresos personales con autenticación y dashboard."
      github="https://github.com/JonnathanE"
      website="https://github.com/JonnathanE"
      youtube="https://youtu.be/7HgJIAUtICU"
      tech={["React", "Node.js", "MongoDB", "Tailwind CSS"]}
    />

    <ProjectCard
      image="images/work-2.png"
      title="Panel de Control IoT"
      description="Sistema de monitoreo en tiempo real para dispositivos conectados vía MQTT."
      github="https://github.com/JonnathanE"
      website=""
      youtube=""
      tech={["Angular", "Express", "PostgreSQL", "Docker"]}
    />

    <ProjectCard
      image="images/work-3.png"
      title="Portafolio Personal"
      description="Mi portafolio creado con Astro y Tailwind para mostrar mis proyectos y habilidades."
      github="https://github.com/JonnathanE"
      website="https://github.com/JonnathanE"
      youtube=""
      tech={["Astro", "Tailwind CSS", "Vite"]}
    />
  </div>

  <div class="text-center mt-10">
    <a
      href="/#sill"
      class="w-max flex intems-center justify-center gap-2 text-gray-700 border-[0.5px] border-gray-700 rounded-full py-3 px-10 mx-auto my-20 hover:bg-[#fcf4ff] duration-500 dark:border-white dark:text-white dark:hover:bg-darkTheme/50"
      >Ver más proyectos <Image
        src={RightArrowBoldImg}
        alt="arrow icon"
        class="w-4"
      /></a
    >
  </div>
</SectionContainer>
